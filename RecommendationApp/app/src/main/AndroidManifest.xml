<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesis.recommendationapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecommendationApp">
        <activity
            android:name=".resorts.ResortDetailsActivity"
            android:label="Resort details"
            />
        <activity
            android:name=".similarity.SelectResort"
            android:label="Select Resort" />
        <activity android:name=".similarity.SimilarityResult"
            android:label="Similar resorts" />

        <activity android:name=".survey.SurveyActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>